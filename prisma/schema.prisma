}

model Future {
  id             String     @id @default(uuid())
  verbId         String
  germanVerb     String
  germanSentence String
  verb           Verb   @relation(fields: [verbId], references: [id])
  audio          String
}

model FuturePerfect {
  id             String     @id @default(uuid())
  verbId         String
  germanVerb     String
  germanSentence String
