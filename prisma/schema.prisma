generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Verb {
  id              String               @id @default(uuid())
  englishVerb     String
  englishSentence String
  present         Present[]
  presentPerfect  PresentPerfect[]
  past            Past[]
  pastPerfect     PastPerfect[]
  future          Future[]
  futurePerfect   FuturePerfect[]
}

model Present {
  id             String     @id @default(uuid())
  verbId         String
  germanVerb     String
  germanSentence String
  verb           Verb   @relation(fields: [verbId], references: [id])
  audio          String
}

model PresentPerfect {
  id             String     @id @default(uuid())
  verbId         String
  germanVerb     String
  germanSentence String
  verb           Verb   @relation(fields: [verbId], references: [id])
  audio          String
}

model Past {
  id             String     @id @default(uuid())
  verbId         String
  germanVerb     String
  germanSentence String
  verb           Verb   @relation(fields: [verbId], references: [id])
